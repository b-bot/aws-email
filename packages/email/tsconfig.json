{
    "compilerOptions": {
        "jsx": "react",
        "module": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "baseUrl": ".",
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "moduleResolution": "nodenext",
        "noEmit": true,
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": false,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        ".react-email"
    ]
}